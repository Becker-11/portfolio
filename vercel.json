{
    "version": 2,
    "builds": [
      {
        "src": "api/index.py",
        "use": "@vercel/python",
        "config": {
          "includeFiles": [
            "research_aggregator/**"
          ]
        }
      }
    ],
    "routes": [
      { "src": "/",        "dest": "api/index.py" },
      { "src": "/(.*)",    "dest": "api/index.py" }
    ]
  }